@using MVCTicari.Models
@model List<Urun>
@{
    ViewBag.Title = "AnaUrun";
    Layout = "~/Views/Shared/AnaSayfa.cshtml";
}

<br />
<h2 style="margin-left:30px">ÜRÜN LİSTESİ</h2>
<br />
<table class="table table-hover" style="margin-left:30px">
    <tr>
        <th>
            ID
        </th>
        <th>
            ÜRÜN
        </th>
        <th>
            MARKA
        </th>
        <th>
            STOK
        </th>
        <th>
            ALIŞ FİYAT
        </th>
        <th>
            SATIŞ FİYAT
        </th>
        <th>
            KATEGORİ
        </th>
        <th>
            SİL
        </th>
        <th>
            DÜZENLE
        </th>
    </tr>


    @foreach (var ktg in Model)
    {
        <tr>
            <td>
                @ktg.UrunID
            </td>
            <td>
                @ktg.UrunAd
            </td>
            <td>
                @ktg.Marka
            </td>
            <td>
                @ktg.Stok
            </td>
            <td>
                @ktg.AlisFiyat
            </td>
            <td>
                @ktg.SatisFiyat
            </td>
            <td>
                @ktg.Kategori1.KategoriAd
            </td>
            <td>
                <a href="~/Urun/UrunSil/@ktg.UrunID" class="btn btn-danger">SİL</a>
            </td>
            <td>
                <a href="~/Urun/UrunGetir/@ktg.UrunID" class="btn btn-warning">GÜNCELLE</a>
            </td>
        </tr>

    }

</table>
<a href="~/Urun/YeniUrun" style="margin-left:30px" class="btn btn-success">Yeni Ürün Ekle</a>