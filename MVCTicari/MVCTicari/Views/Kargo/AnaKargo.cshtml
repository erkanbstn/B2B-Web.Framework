@using MVCTicari.Models
@model List<KargoDetay>
@{
    ViewBag.Title = "AnaKargo";
    Layout = "~/Views/Shared/AnaSayfa.cshtml";
}

<br />
<h2 style="margin-left:30px">KARGO LİSTESİ</h2>
<br />
<div style="margin-left:30px">
    @using (Html.BeginForm("AnaKargo", "Kargo", FormMethod.Post))
    {
        <span>Kargo Takip Numarası:</span> @Html.TextBox("hece")
        <br />
        <button type="submit" class="btn btn-warning">Kargo Ara</button>
    }
</div>
<br />
<table class="table table-hover" style="margin-left:30px">
    <tr>
        <th>
            PERSONEL
        </th>
        <th>
            ALICI
        </th>
        <th>
            TARİH
        </th>
        <th>
            DETAY
        </th>
    </tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <td>
                @ktg.Personel
            </td>
            <td>
                @ktg.Alici
            </td>
            <td>
                @Convert.ToDateTime(ktg.Tarih).ToString("dd/MMMM/yyyy")
            </td>
            <td>
                <a href="~/Kargo/KargoDetay/@ktg.TakipKodu" class="btn btn-warning">Detaylar</a>
            </td>
        </tr>

    }

</table>
<a href="~/Kargo/YeniKargo" style="margin-left:30px" class="btn btn-success">Yeni Kargo Girişi</a>
