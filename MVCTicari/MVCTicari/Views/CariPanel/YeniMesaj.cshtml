@model MVCTicari.Models.Mesaj
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/CariPanel.cshtml";
}

<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>AdminLTE 3 | Compose Message</title>

    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Theme style -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">

    <!-- summernote -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">

    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini">





    <!-- Content Header (Page header) -->

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-sm-6">

                    <h1>Yeni Mesaj Oluştur</h1>

                </div>



            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-3">

                    @Html.Action("CariMesajSideBar", "CariPanel")


                    <!-- /.card -->
                    <!-- /.card -->

                </div>

                <!-- /.col -->

                <div class="col-md-9">

                    @using (Html.BeginForm("YeniMesaj", "CariPanel", FormMethod.Post))
                    {
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Yeni Mesaj Gönder</h3>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <input class="form-control" name="Alici" placeholder="Kime:">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="Konu" placeholder="Konu:">
                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(b => b.Mesaj1, 6, 30, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i>Mesaj Gönder</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            $('#compose-textarea').summernote()
        })</script>
</body>
</html>

