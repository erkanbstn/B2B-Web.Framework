@model MVCTicari.Models.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/AnaSayfa.cshtml";
}

<br />
<h2 style="margin-left:30px">Personel DÜZENLE</h2>
<br />

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.LabelFor(c => c.PersonelID)
    <br />
    @Html.TextBoxFor(c => c.PersonelID, new { @class = "form-control" })
    <br />
    @Html.LabelFor(c => c.PersonelAd)
    <br />
    @Html.TextBoxFor(c => c.PersonelAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(c => c.PersonelSoyad)
    <br />
    @Html.TextBoxFor(c => c.PersonelSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(c => c.Departman)
    <br />
    @Html.DropDownListFor(c => c.Departman, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    <input type="file" name="PersonelGorsel" class="form-group" />
    <br />
    <button type="submit" class="btn btn-info">Personeli Güncelle</button>
}

