@using MVCTicari.Models
@model List<Cari>
@{
    ViewBag.Title = "AnaCari";
    Layout = "~/Views/Shared/AnaSayfa.cshtml";
}

<br />
<h2 style="margin-left:30px">CARİ LİSTESİ</h2>
<br />
<table class="table table-hover" style="margin-left:30px">
    <tr>
        <th>
            ID
        </th>
        <th>
            AD
        </th>
        <th>
            SOYAD
        </th>
        <th>
            ŞEHİR
        </th>
        <th>
            MAİL
        </th>
        <th>
            DETAY
        </th>
        <th>
            SİL
        </th>
        <th>
            DÜZENLE
        </th>
    </tr>


    @foreach (var ktg in Model)
    {
<tr>
    <td>
        @ktg.CariID
    </td>
    <td>
        @ktg.CariAd
    </td>
    <td>
        @ktg.CariSoyad
    </td>
    <td>
        @ktg.CariSehir
    </td>
    <td>
        @ktg.CariMail
    </td>
    <td>
        <a href="~/Cari/CariDetay/@ktg.CariID" class="btn btn-info">SATIŞ GEÇMİŞİ</a>
    </td>
    <td>
        <a href="~/Cari/CariSil/@ktg.CariID" class="btn btn-danger">SİL</a>
    </td>
    <td>
        <a href="~/Cari/CariGetir/@ktg.CariID" class="btn btn-warning">GÜNCELLE</a>
    </td>
</tr>

    }

</table>
<a href="~/Cari/YeniCari" style="margin-left:30px" class="btn btn-success">Yeni Cari Ekle</a>